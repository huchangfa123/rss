{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "angular": true,
        "d3": true,
        "ga": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-param-reassign": "off",
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true,
                "align": "value"
            }
        ],
        "no-unused-vars": [
            "warn",
            {
                "var": "all",
                "all": "all"
            }
        ],
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "func-names": "off",
        "consistent-return": "off",
        "no-console": "off",
        "no-restricted-syntax": "off",
        "no-underscore-dangle": "off",
        "no-return-assign": "off",
        "no-await-in-loop": "off",
        "no-shadow": "warn",
        "no-continue": "off",
        "camelcase": "off"
    }
}